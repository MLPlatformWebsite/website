---
const { style, text_content } = Astro.props;
import * as marked from "marked";
const markdown = marked.parse(text_content.text);
---

<div
  class:list={[
    style,
    "prose-lg md:prose-xl px-4 text-inherit prose-a:text-blue-800 prose-a:no-underline hover:prose-a:underline",
  ]}
>
  <div set:html={markdown} />
</div>
