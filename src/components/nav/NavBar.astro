---
import Dropdown from "./Dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import MLPlatformLogo from "../../assets/images/ml-platform-logo.png";
import { Image } from "astro:assets";
import { getEntry } from "astro:content";

const navData = await getEntry("data", "nav");
---

<div class="bg-accent">
  <header
    class="flex flex-col lg:flex-row justify-between items-center bg-accent text-white container mx-auto"
  >
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between px-8">
        <a href="/" class="text-lg"
          ><Image
            src={MLPlatformLogo}
            alt="ML Platform Logo"
            width={150}
            height={150}
            class="py-2"
          /></a
        >
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-white" />
        </div>
      </div>
      <MenuItems
        class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0 font-medium"
      >
        <ul class="flex flex-col lg:flex-row lg:gap-3 items-center">
          {
            navData.data.map((item: any, index: number) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.label}
                    children={item.children}
                    lastItem={index === item.children.length - 1}
                  />
                )}

                {!item.children && (
                  <div class="my-5 relative">
                    <div class="nav-hover transition">
                      <a
                        href={item.url}
                        class="flex lg:px-3 py-2 text-inherit "
                      >
                        {item.label}
                      </a>
                    </div>
                  </div>
                )}
              </>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
  </header>
</div>
